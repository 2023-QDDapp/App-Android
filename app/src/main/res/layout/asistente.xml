<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fotoUsuarioAsistente"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@+id/circleImageView"
        app:layout_constraintEnd_toStartOf="@+id/nombreUsuarioAsistente"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nombreUsuarioAsistente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/raleway"
        android:text="Cristina Fernandez"
        android:textColor="@color/color_secundario"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/fotoUsuarioAsistente"
        app:layout_constraintStart_toEndOf="@+id/fotoUsuarioAsistente"
        app:layout_constraintTop_toTopOf="@+id/fotoUsuarioAsistente" />
</androidx.constraintlayout.widget.ConstraintLayout>